{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "bun",
            "args": [
                "run",
                "compile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "bun",
            "args": [
                "run",
                "watch"
            ],
            "options": {
                "cwd": "${workspaceFolder}/vscode-extension"
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            }
        }
    ]
}

